<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ic_cont"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="#e5e5e5" />

                <TextView
                    android:id="@+id/lblcont_name"
                    android:text="Contact Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="23sp"
                    android:layout_toRightOf="@id/ic_cont"
                    android:layout_gravity="center"
                    android:paddingLeft="15dp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/txtMobNum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:background="#848B97" />

                <ListView
                    android:id="@+id/listMobNum"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/txtMobNum" />

                <TextView
                    android:id="@+id/txtEmails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:background="#848B97"
                    android:layout_below="@id/listMobNum"
                    android:layout_marginTop="5dp"/>

                <ListView
                    android:id="@+id/listEmails"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/txtEmails" />
            </RelativeLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>